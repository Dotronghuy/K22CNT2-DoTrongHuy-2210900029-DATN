<script>
    document.addEventListener('DOMContentLoaded', function () {

    const dailyRevenue = {{{ json revenueStats.dailyRevenue }}};

    const startDateStr = '{{startDate}}'; // YYYY-MM-DD
    const endDateStr = '{{endDate}}';

    const startDate = new Date(startDateStr + 'T00:00:00');
    const endDate = new Date(endDateStr + 'T00:00:00');

    const revenueMap = {};

    // Map YYYY-MM-DD -> revenue
    dailyRevenue.forEach(item => {
        revenueMap[item._id] = item.totalRevenue;
    });

    const labels = [];
    const data = [];

    // Loop từ startDate → endDate
    for (
        let d = new Date(startDate);
        d <= endDate;
        d.setDate(d.getDate() + 1)
    ) {
        const yyyy = d.getFullYear();
        const mm = (d.getMonth() + 1).toString().padStart(2, '0');
        const dd = d.getDate().toString().padStart(2, '0');

        const key = `${yyyy}-${mm}-${dd}`; // match backend
        const label = `${dd}/${mm}`;

        labels.push(label);
        data.push(revenueMap[key] ?? 0);
    }

    const ctx = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels,
            datasets: [{
                label: 'Doanh thu (VND)',
                data,
                borderRadius: 6,
                barThickness: 22
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback(value) {
                            return new Intl.NumberFormat('vi-VN', {
                                style: 'currency',
                                currency: 'VND'
                            }).format(value);
                        }
                    }
                }
            }
        }
    });
});
</script>