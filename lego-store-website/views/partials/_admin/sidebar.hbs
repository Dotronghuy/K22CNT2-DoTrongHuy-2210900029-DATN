<div class="admin-sidebar">
    <h1 class="admin-logo">
        {{!-- <i class="bi bi-shop"></i> --}}
        Avaro Craft - Admin
    </h1>

    <nav class="admin-nav">
        <ul>
            {{#each adminMenu}}
            <li>
                <a href="{{this.path}}" class="sidebar-item {{#if (eq ../activePage this.key)}}active{{/if}}">
                    <i class="bi {{this.icon}}"></i>
                    {{this.label}}
                </a>
            </li>
            {{/each}}
            <li style="margin-top: auto;">
                <a href="/" class="sidebar-item">
                    <i class="bi bi-house"></i>
                    Trang chủ
                </a>
            </li>
        </ul>
        <div class="logout-section">
            <a class="logout" id="logoutLink" style="cursor: pointer;">
                <i class="bi bi-box-arrow-right"></i>
                Đăng xuất
            </a>
        </div>
    </nav>
</div>